<div class="relative h-full w-full min-h-screen bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)] pointer-events-none"></div>  

  <div class="w-full flex flex-col items-center py-24 px-4 min-h-screen">
    <h1 class="font-bold text-4xl"><%= t("feed.title") %></h1>
    <p class="mt-4 text-xl"><%= t("feed.description") %></p>
    <div class="max-w-2xl w-full flex flex-col items-center justify-center mx-auto mt-8">
      <%= link_to t("feed.new_post"), new_post_path, class: "bg-black bg-opacity-70 text-white p-4 rounded-lg w-48 text-center hover:bg-opacity-90 transition duration-200" %>
    </div>

    <div class="max-w-2xl w-full grid gap-8 mt-8">
      <%= render partial: "post", collection: @posts %>
    </div>
  </div>
</div>
