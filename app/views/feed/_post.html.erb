<div class="min-h-96 w-full bg-gray-200 rounded-lg overflow-hidden relative"  data-controller="dropdown">
    <%= image_tag(post.images.first, class: "w-full h-64 object-cover") if post.images.any? %>
    <div class="p-2">
        <p class="text-2xl font-semibold"><%= post.caption %></p>
        <p class="text-xl"> <%= post.feed_body %><%= "..." if post.feed_body_is_larger? %></p>
        <p class="text-md text-slate-700"> by <%= post.user.username %></p>
        <p class="text-sm text-slate-600"> posted <%= time_ago_in_words(post.created_at) %> ago </p>

    </div>
    
    <div class="absolute bottom-4 right-4">
       <%= link_to "#", data: { action: "dropdown#toggle" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 hover:scale-105">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
        <% end %>
    </div>
    
    <div class="z-10 absolute w-40 h-36 bg-slate-200 bg-opacity-100 bottom-16 right-0 border-2 border-gray-900 grid grid-cols-4 p-4 gap-2 rounded-lg" data-dropdown-target="menu">
      Hiii
    </div>
</div>