<div class="relative h-full w-full min-h-screen bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)] pointer-events-none"></div>  
    <div class="w-full p-4">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>

      <% content_for :title, "Posts" %>

      <div class="flex justify-center mb-4"> <!-- Use flex to center only the title -->
        <h1 class="font-bold text-4xl">Posts</h1>
      </div>

      <div class="flex justify-center items-center mb-4">
        <%= link_to "New post", new_post_path, class: "mt-4 bg-black bg-opacity-70 text-white p-4 rounded-lg w-32 text-center hover:bg-opacity-90 transition duration-200" %>
      </div>

      <div id="posts" class="min-w-full">
        <% @posts.each do |post| %>
          <%= render post %>
          <p>
            <%= link_to "Show this post", post_path(post, locale: I18n.default_locale), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </p>
        <% end %>
      </div>
    </div>
</div>
