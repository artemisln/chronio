<div class="relative h-full w-full min-h-screen bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)] pointer-events-none"></div>  
    <div class="flex flex-col px-4 items-center justify-center min-h-screen w-full bg-cover bg-top">
      <div class="mx-auto md:w-2/3 w-full">
        <h1 class="font-bold text-4xl mb-4">Editing post</h1>
        <div class="w-full max-w-2xl">
          <%= render "form", post: @post %>
        </div>

        <%= link_to "Show this post", post_path(@post), class: "text-sm mt-4 bg-black bg-opacity-70 text-white p-2 rounded-lg w-24 text-center hover:bg-opacity-90 transition duration-200" %>
        <%= link_to "Back to posts", posts_path, class: "text-sm mt-4 bg-black bg-opacity-70 text-white p-2 rounded-lg w-24 text-center hover:bg-opacity-90 transition duration-200" %>

      </div>
    </div>
</div>
