<div class="w-full flex flex-col items-center pt-24">
    <div class="max-w-5xl w-full mx-auto">
        <%= turbo_frame_tag @post, :comments do %>
            <%= form_with model: [@post, @post.comments.new], url: post_comments_path(@post, locale: I18n.locale) do |f| %>
                <div class="flex flex-col w-full">
                    <%= f.text_area :body, class: "w-full rounded-lg", placeholder:"I think..." %>
                </div>
                <div class="w-full flex justify-between items-center mt-4">
                    <%= link_to "Cancel", "/", class: "border-2 border-white bg-white bg-opacity-15 text-sm text-red p-2 rounded-lg w-52 text-center hover:scale-105"%>
                    <%= f.submit "Send", class: "border-2 border-red bg-white bg-opacity-15 text-base text-black p-2 rounded-lg w-72 text-center cursor-pointer hover:scale-105" %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>