<div class="w-full min-h-[100vh] pt-24 bg-cover bg-top pb-24" style="background-image: url('<%= asset_path("sky.jpg") %>')">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 rounded-lg py-8">
    <h2 class="text-xl mb-4 text-center">Log in</h2>

    <div class="w-3/4 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-4">
          <%= f.label :email, class: "mb-2 text-lg" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-2 focus:ring-0 rounded-lg bg-gray-50" %>
        </div>

        <div class="field mb-4 border-[#A020F0]">
          <%= f.label :password, "Κωδικός", class: "mb-2 text-lg" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-2 focus:ring-0 rounded-lg bg-gray-50" %>
        </div>
        
        <% if devise_mapping.rememberable? %>
          <div class="field mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Μείνε συνδεδεμένος" %>
          </div>
        <% end %>

        <div class="actions w-full text-center">
          <%= f.submit "Σύνδεση", class: "bg-black bg-opacity-70 text-white p-4 rounded-lg w-48 text-center hover:bg-opacity-90 transition duration-200" %>
        </div>
      <% end %>
      <div class="flex flex-col items-center mt-4 gap-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>