<div class="relative h-full w-full min-h-screen bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)] pointer-events-none"></div>  
    <div class="w-full min-h-[100vh] pt-24 flex flex-col items-center bg-cover bg-top pb-24">
      <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 rounded-lg py-8">
        <h2 class="text-xl mb-4 text-center">Register</h2>

        <div class="w-3/4 mx-auto">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field mb-4">
              <%= f.label :email, class: "mb-2 text-lg", for: "user_email" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg bg-gray-50", id: "user_email", name: "user[email]" %>
            </div>

            <div class="field mb-4">
              <%= f.label :username, for: "user_username" %><br />
              <%= f.text_field :username, class: "w-full rounded-lg bg-gray-50", id: "user_username", name: "user[username]" %>
            </div>

            <div class="field mb-4">
              <%= f.label :password, "Password", class: "mb-2 text-lg", for: "user_password" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters at least)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50", id: "user_password", name: "user[password]" %>
            </div>

            <div class="field mb-4">
              <%= f.label :password_confirmation, "Confirm Password", class: "mb-2 text-lg", for: "user_password_confirmation" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50", id: "user_password_confirmation", name: "user[password_confirmation]" %>
            </div>

            <div class="actions items-center text-center">
              <%= f.submit "Register", class: "bg-black bg-opacity-70 text-white p-4 rounded-lg w-48 text-center hover:bg-opacity-90 transition duration-200" %>
            </div>
          <% end %>

          <div class="flex flex-col items-center mt-4 gap-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
</div>
</div>