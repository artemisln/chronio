<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-4"><%= action_name.capitalize %> Job</h1>
  <%= form_with(model: @job, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-lg" %>
      <%= form.text_field :name, class: "w-full rounded-lg bg-gray-50" %>
    </div>
    <div class="mb-4">
      <%= form.label :description, class: "block text-lg" %>
      <%= form.text_area :description, class: "w-full rounded-lg bg-gray-50" %>
    </div>
    <div class="mb-4">
      <%= form.label :salary, class: "block text-lg" %>
      <%= form.number_field :salary, class: "w-full rounded-lg bg-gray-50" %>
    </div>
    <div class="mb-4">
      <%= form.label :location, class: "block text-lg" %>
      <%= form.text_field :location, class: "w-full rounded-lg bg-gray-50" %>
    </div>
    <div class="text-center">
      <%= form.submit class: "bg-black bg-opacity-70 text-white p-4 rounded-lg w-48 text-center hover:bg-opacity-90 transition duration-200" %>
    </div>
  <% end %>
</div>