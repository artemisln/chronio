<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-4"><%= t('menu.jobs') %></h1>
  <p class="text-gray-700 mb-6"></p>

  <div class="flex justify-center items-center mb-4">
    <%= link_to "Create listing", new_job_path, class: "mt-4 bg-black bg-opacity-70 text-white p-4 rounded-lg w-32 text-center hover:bg-opacity-90 transition duration-200" %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-4">
    <h2 class="text-xl font-semibold mb-3">Featured Jobs</h2>
    <% @jobs.each do |job| %>
      <div class="bg-gray-200 p-4 rounded-lg mb-4">
        <h3 class="text-2xl font-bold"><%= job.name %></h3>
        <p class="text-lg"><%= job.description %></p>
        <p class="text-md">Salary: <%= number_to_currency(job.salary) %></p>
        <p class="text-md">Location: <%= job.location %></p>
        <p class="text-sm text-gray-600">Posted by <%= job.user.username %> <%= time_ago_in_words(job.created_at) %> ago</p>
      </div>
    <% end %>
  </div>
</div>