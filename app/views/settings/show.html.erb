<div class="min-h-screen bg-gray-100 dark:bg-[#0a0a0a] flex justify-center py-4">
  <div class="w-[350px] max-w-md mx-auto px-4">
    <div class="bg-white dark:bg-[#11161a] rounded-xl shadow-lg p-10 border border-gray-200 dark:border-gray-700">
      <!-- Back Button -->
      <%= link_to root_path(locale: I18n.locale), class: "flex items-center gap-2 mb-6 text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-white transition" do %>
        <%= lucide_icon('arrow-left', class: 'w-5 h-5') %>
        <span class="text-sm font-medium">Back</span>
      <% end %>

      <!-- Title & Description -->
      <h2 class="text-2xl font-bold px-4 mb-4 text-gray-900 dark:text-white flex items-center gap-2">
        <%= lucide_icon('globe', class: 'w-6 h-6 text-blue-600 dark:text-blue-400') %>
        Language
      </h2>
      <p class="text-gray-500 px-4 dark:text-gray-400 py-2 mb-8">Select the language you use on Chronio</p>

      <!-- Form & Info with extra padding -->
      <div class="px-2">
        <%= form_with url: url_for, method: :get, local: true do |form| %>
          <div class="mb-6 px-2 ">
            <select name="locale" id="language"
              class="block w-56 px-4 py-2 rounded-md bg-gray-100 dark:bg-[#232b33] text-gray-900 dark:text-gray-200 border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
              <% { en: 'English (English)', es: 'Español (Spanish)', gr: 'Ελληνικά (Greek)' }.each do |locale, label| %>
                <option value="<%= locale %>" <%= 'selected' if I18n.locale == locale %>><%= label %></option>
              <% end %>
            </select>
          </div>
        <% end %>

        <!-- Info Text -->
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-6 px-4 py-2">
          Let us know which language you're most comfortable using on Chronio. You can change it back at any time.
        </p>
      </div>
    </div>
  </div>
</div>