<div class="w-full bg-slate-900 h-16 sticky top-0 z-[999]">
    <div class="max-w-7xl w-full h-full mx-auto flex items-center justify-between">
        <%= link_to "Αρχική", "/", class: "text-xl bg-slate-900 text-gray-100" %>
        <% if current_user %>
    
            <div class="relative" data-controller="dropdown" data-action="click@window->dropdown#closeUnlessDropdown">
                <p class="text-xl text-gray-100" data-action="click->dropdown#toggle"> <%= current_user.username %> </p>
                <div class="absolute p-2 flex flex-col top-10 right-0 w-56 h-56 bg-gray-200 rounded-lg hidden" data-dropdown-target="menu">
                    <%=link_to "Edit account", edit_user_registration_path, class: "text-xl text-gray-800" %>
                    <%=link_to "Sign out", destroy_user_session_path, class: "mt-auto ml-auto p-2 rounded-lg bg-gray-500 text-gray-50" %>
                </div>
            </div>
        
        <% end %>
    </div>
</div>