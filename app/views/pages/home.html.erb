<div class="relative w-full min-h-screen bg-slate-500 dark:bg-black overflow-hidden">
  
  <script>
    console.log("Asset Path for sky.jpg: <%= asset_path("sky.jpg") %>");
  </script>
  <!-- Full-screen Background Image with Dark Overlay for readability -->
  <div class="absolute inset-0 -z-20 bg-cover bg-center" style="background-image: url('<%= asset_path("sky.jpg") %>');">
  </div>

  <!-- Radial Gradient Accent -->
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)] dark:bg-[radial-gradient(circle_500px_at_50%_200px,#0c2c49,transparent)] pointer-events-none opacity-50"></div>  

  <div class="w-full flex flex-col items-center pt-24 pb-24 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    
    <!-- Hero Section -->
    <div class="text-center mb-24 backdrop-blur-sm bg-white/20 dark:bg-black/30 p-10 rounded-xl shadow-2xl">
      <h1 class="font-bold text-6xl md:text-7xl leading-tight text-white drop-shadow-lg mb-4">
        Chronio
      </h1>
      <p class="mt-4 text-2xl text-white drop-shadow-md max-w-3xl mx-auto">
        Your professional network hub. Connect with peers, share insights, and find your next opportunity.
      </p>
      
      <!-- Call to Action Buttons - Styled using render_button helper -->
      <div class="mt-10 flex gap-4 justify-center">
        <% if user_signed_in? %>
          <%= render_button t("feed.title"), as: :link, href: authenticated_user_root_path, variant: :default, class: "shadow-md px-8 py-3 text-lg" %>
        <% else %>
          <%= render_button t("devise.sign_in"), as: :link, href: new_user_session_path, variant: :default, class: "shadow-md px-8 py-3 bg-blue-400 text-white text-lg" %>
          <%= render_button t("devise.sign_up"), as: :link, href: new_user_registration_path, variant: :outline, class: "shadow-md px-8 py-3 text-lg text-white hover:bg-white/10" %>
        <% end %>
      </div>
    </div>
    
    <!-- Features Section (Shadcn-like Cards) -->
    <h2 class="text-3xl font-bold text-white drop-shadow-md mb-12">Built for Professionals</h2>
    
    <div class="w-full grid grid-cols-1 sm:grid-cols-3 gap-8">
      
      <!-- Feature 1: Connect and Network -->
      <%= content_tag :div, class: "bg-card/90 dark:bg-slate-900/90 border border-border dark:border-slate-700 rounded-xl shadow-lg p-6 flex flex-col items-center text-center transition-all hover:shadow-xl backdrop-blur-sm" do %>
        <%= lucide_icon("users", class: "w-12 h-12 text-blue-600 dark:text-blue-400 mb-4") %>
        <h3 class="text-xl font-semibold text-foreground dark:text-white mb-2">Build Your Network</h3>
        <p class="text-sm text-muted-foreground dark:text-slate-400">
          Easily connect with colleagues, industry leaders, and potential collaborators to expand your professional reach.
        </p>
      <% end %>

      <!-- Feature 2: Share and Engage -->
      <%= content_tag :div, class: "bg-card/90 dark:bg-slate-900/90 border border-border dark:border-slate-700 rounded-xl shadow-lg p-6 flex flex-col items-center text-center transition-all hover:shadow-xl backdrop-blur-sm" do %>
        <%= lucide_icon("message-circle-plus", class: "w-12 h-12 text-green-600 dark:text-green-400 mb-4") %>
        <h3 class="text-xl font-semibold text-foreground dark:text-white mb-2">Share Insights</h3>
        <p class="text-sm text-muted-foreground dark:text-slate-400">
          Create engaging posts with rich text and images. React and comment on topics that matter to your career.
        </p>
      <% end %>

      <!-- Feature 3: Job Opportunities -->
      <%= content_tag :div, class: "bg-card/90 dark:bg-slate-900/90 border border-border dark:border-slate-700 rounded-xl shadow-lg p-6 flex flex-col items-center text-center transition-all hover:shadow-xl backdrop-blur-sm" do %>
        <%= lucide_icon("briefcase", class: "w-12 h-12 text-amber-600 dark:text-amber-400 mb-4") %>
        <h3 class="text-xl font-semibold text-foreground dark:text-white mb-2">Find Your Next Job</h3>
        <p class="text-sm text-muted-foreground dark:text-slate-400">
          Browse and post job listings. Connect with companies and talent directly through the platform.
        </p>
      <% end %>
    </div>
  </div>
</div>